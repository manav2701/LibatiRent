{
  "version": 2,
  "name": "libati-rent",
  "builds": [
    {
      "src": "frotend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "backend/server.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/(.*\\.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|mp4|webm|ogg))",
      "dest": "frotend/build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frotend/build/index.html"
    }
  ],
  "installCommand": "cd frotend && npm install --legacy-peer-deps && cd ../backend && npm install",
  "buildCommand": "cd frotend && CI=false npm run build",
  "env": {
    "NODE_ENV": "production"
  }
}